<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/c6637c7f43.css" media="all" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/c6637c7f43.js"></script>
  </head>

  <body>
      <%= render "layouts/navbar" %>
      <% if flash[:notice] %>
      <hr>
      <div class="alert alert-success flash-notice flashNotice"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
      <div class="alert alert-danger flash-alert flashNotice"><%= flash[:alert] %></div>
      <hr>
      <%= notice || alert %>
      <% end %>
    <!-- <div class="container"> -->
      <%= yield %>
    <!-- </div> -->
  </body>
</html>
