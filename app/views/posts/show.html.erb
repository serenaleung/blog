<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="ftImg postImg">
      <%= image_tag('/post.jpg', class: 'img-responsive') %>
    </div>

    <div class="container">
      <div class="col-xs-12 col-sm-8 col-md-8">
        <h1><%=@post.title%></h1>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"> 456</span>
        <i class="fa fa-bookmark-o" aria-hidden="true"></i>
      </div>
    </div>
    <!-- </div> -->
    <div class="container fullPost">
      <p><%= @post.body %></p>
      <h6 class="postDate"><%= @post.date %></h6>
      <h5><%= link_to(@post.category.title.upcase , category_path(@post.category.id)) %></h5>
    </div>
  </div>
  <div class="container">

    <hr/>
    <div class="author paddingLeft">
      <img class="author" src="/cat.png" alt="">
      <h5>Author Name</h5>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </div>
    <br>
  <hr/>
  <div class="">
    <h2 class="commentForm">Leave a comment...</h2>
    <% @comment.errors.full_messages.join(', ') %>
    <%= form_for [@post, @comment] do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, { class: 'form-control' }%>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, { class: 'form-control' }%>
    </div>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        Submit Review
      <% end %>
    <% end %>

    <br>
    <hr/>
  </div>
    <!------------- Reviews ------------->
  <%# if false %>
      <% @post.comments.each do |c| %>
        <div class="well">
          <img src="<%= c.image %>">
          <h4>Name: <%= c.name %></h4>
          <p>Comments: <%= c.body %></p>
          <h6><%= c.date %></h6>
          <%= link_to('Delete', post_comment_path(@post, c), method: :delete, data: {confirm: 'Are you sure?'}) %>
        </div>
      <% end %>
  <%# end %>
  </div><!-- /.container-fluid -->

      <a href="#"><h4 class="morePosts">More Comments</h4></a>
      <div class="text-center">
        <i class="fa fa-envelope-o" aria-hidden="true"></i>
        <i class="fa fa-facebook" aria-hidden="true"></i>
        <i class="fa fa-instagram" aria-hidden="true"></i>
        <i class="fa fa-medium" aria-hidden="true"></i>
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </div>
  </div>

</body>
