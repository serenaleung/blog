<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-8 box">
      <div class="ftSize">
        <img class="ftImg" src="post.jpg" alt="">
        <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"> 99
        </span>
        <i class="fa fa-bookmark-o" aria-hidden="true"></i>
      </div>
      <% @ftPost.each do |p| %>

        <h2><%= link_to p.title, p %></h2>
        <p><%= truncate(p.body, length: 400) %></p>
        <h5><%#= p.name %></h5>
        <h6><%#= p.date %></h6>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-4 mostLiked">
      <h2>Most Liked</h2>
        <a class="navLinks" href="#">The Worst Advice We've Ever Heard</a><br/>
        <a class="navLinks" href="#">Think You're Cut Out For Doing Design?</a><br/>
        <a class="navLinks" href="#">How to Solve the Biggest Problems</a><br/>
        <a class="navLinks" href="#">10 Things Your Competitors Can Teach</a><br/>
        <a class="navLinks" href="#">14 Common Misconceptions About</a><br/>
        <a class="navLinks" href="#">The History of Design</a><br/>
        <a class="navLinks" href="#">10 Signs You Should Invest In Tech</a><br/>
        <a class="navLinks" href="#">5 Tools Everyone In The Design Industry</a><br/>
    </div>
  </div>
  <div class="row paddingTop">
      <% @posts.each do |p| %>
        <div class="col-xs-12 col-sm-4 col-md-4 box">
          <div class="ftSize">
            <img class="ftImg" src="https://theluxurytravelexpert.files.wordpress.com/2014/01/scenery.jpg" alt="">
            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"> 12</span>
            <i class="fa fa-bookmark-o" aria-hidden="true"></i>

          <h2><%= link_to p.title, p %></h2>
          <p><%= truncate(p.body, length: 270) %></p>
          <h5><%#= p.name %></h5>
          <h6 class="indexPosts"><%= p.date %></h6>
          </div>
        </div>
      <% end %>
  </div>

</div><!-- /.container-fluid -->
<div class="container">
  <a href="#"><h4 class="morePosts">More posts</h4></a>
  <div class="text-center">
    <i class="fa fa-envelope-o" aria-hidden="true"></i>
    <i class="fa fa-facebook" aria-hidden="true"></i>
    <i class="fa fa-instagram" aria-hidden="true"></i>
    <i class="fa fa-medium" aria-hidden="true"></i>
    <i class="fa fa-twitter" aria-hidden="true"></i>
  </div>
</div>
